body
.cover-container.d-flex.w-100.h-100.p-3.mx-auto.flex-column
  header.masthead.mb-auto
    .inner
      h3.masthead-brand Travel Experts
      form.form-signin.form-inline.justify-content-center(method='POST' action='/login')
        label.sr-only(for='inputUser') Email address
        input#inputUser.form-control.form-control-sm.form-control-inline(style='margin:5px' type='email' name='username' placeholder='Email' required='' autofocus='')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control.form-control-sm.form-control-inline(style='margin:5px' type='password' name='password' placeholder='Password' required='')
        button.btn.btn-sm.btn-light(type='submit' style='margin:5px') Sign in
      nav.nav.nav-masthead.justify-content-center
        a.nav-link.active(href='../destinations.html') Destinations
        a.nav-link(href='/packages') Packages
        a.nav-link(href='/viewbookings') Bookings
        a.nav-link(href='/blogs/all') Blogs
        a.nav-link(href='/blogs') Create Blog
        a.nav-link(href='/register') Register
        a.nav-link(href='/contacts') Contact Us
     
     
    if errors    
        each error in errors
            p.alert.alert-danger= error

  if headermessage
    .container 
      p#headermessage.alert.alert-success(style='margin-top:15px')= headermessage

      
  main.inner.cover(role='main')
      h1.cover-heading Your destination awaits!
      p.lead Allow us to plan you dream getaway.
      
  footer.mastfoot.mt-auto
    .inner
      p
